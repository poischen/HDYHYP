<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anita.hdyhyp.MainActivity">

    <TextView
        android:text="@string/waiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statusTextView"
        android:layout_marginBottom="81dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:text="@string/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/helloTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/tellUrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tellMeYourNameTextView"
        android:layout_above="@+id/spinnerNames"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerNames"
        android:entries="@array/spinnerNamesEntries"
        android:prompt="@string/spinnerNamesChoose"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/deleteButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <Button
        android:text=" Permissions 1 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSettings1"
        android:layout_marginTop="26dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/textColorPrimary"
        android:layout_below="@+id/helloTextView"
        android:layout_toLeftOf="@+id/helloTextView"
        android:layout_toStartOf="@+id/helloTextView" />

    <Button
        android:text=" Permissions 2 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSettings2"
        android:background="@color/colorPrimary"
        android:textColor="@color/textColorPrimary"
        android:layout_alignBaseline="@+id/buttonSettings1"
        android:layout_alignBottom="@+id/buttonSettings1"
        android:layout_toRightOf="@+id/helloTextView"
        android:layout_toEndOf="@+id/helloTextView" />

    <Button
        android:text="submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:background="@color/colorPrimary"
        android:id="@+id/submitButton"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/buttonSettings1"
        android:layout_alignStart="@+id/buttonSettings1" />

    <Button
        android:text=" delte name "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:background="@color/colorPrimary"
        android:id="@+id/deleteButton"
        android:layout_alignBaseline="@+id/submitButton"
        android:layout_alignBottom="@+id/submitButton"
        android:layout_alignRight="@+id/buttonSettings2"
        android:layout_alignEnd="@+id/buttonSettings2" />

</RelativeLayout>
